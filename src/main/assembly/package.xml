<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>package</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>${project.build.directory}/${project.build.name}-${project.build.version}.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>${project.build.name}-${project.build.version}.jar</destName>
        </file>
        <file>
            <source>${project.build.directory}/classes/config.yml</source>
            <outputDirectory>/${project.build.name}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/customItems.yml</source>
            <outputDirectory>/${project.build.name}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/itemGroups.yml</source>
            <outputDirectory>/${project.build.name}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/language.yml</source>
            <outputDirectory>/${project.build.name}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/license.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/repairCosts.yml</source>
            <outputDirectory>/${project.build.name}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/socketGem.yml</source>
            <outputDirectory>/${project.build.name}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/tier.yml</source>
            <outputDirectory>/${project.build.name}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/lore/general.txt</source>
            <outputDirectory>/${project.build.name}/resources/lore</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/lore/materials/diamond_sword.txt</source>
            <outputDirectory>/${project.build.name}/resources/lore/materials</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/lore/tiers/legendary.txt</source>
            <outputDirectory>/${project.build.name}/resources/lore/tiers</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/prefixes/general.txt</source>
            <outputDirectory>/${project.build.name}/resources/prefixes</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/prefixes/materials/diamond_sword.txt</source>
            <outputDirectory>/${project.build.name}/resources/prefixes/materials</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/prefixes/tiers/legendary.txt</source>
            <outputDirectory>/${project.build.name}/resources/prefixes/tiers</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/suffixes/general.txt</source>
            <outputDirectory>/${project.build.name}/resources/suffixes</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/suffixes/materials/diamond_sword.txt</source>
            <outputDirectory>/${project.build.name}/resources/suffixes/materials</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/resources/suffixes/tiers/legendary.txt</source>
            <outputDirectory>/${project.build.name}/resources/suffixes/tiers</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <includes>
                <include>*.class</include>
            </includes>
            <outputDirectory>/${project.build.name}/modules</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/modules</directory>
            <outputDirectory>/${project.build.name}/modules</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
